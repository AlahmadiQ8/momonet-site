---
layout: layouts/base.njk
---

<div class="bg-gray-50 border-gray-200 px-12 py-3 border-b-2">
  <nav>
      <ol class="list-reset flex text-gray-600">
          <li><a href="/" class="font-bold">Home</a></li>
          <li><span class="mx-2">/</span></li>
          <li><a href="/tags/posts" class="font-bold">Blog</a></li>
          <li><span class="mx-2">/</span></li>
      </ol>
  </nav>
</div>
<div class="sm:p-12 p-6 divide-gray-200 flex flex-col">
    <article class="prose prose-green lg:prose-xl max-w-none">
        <div class="items-center pt-5 md:mb-10 mb-7 border-b-2" href="#">
            <h1 class="">{{ title }}</h1>
            {# <h2 class="">Why some families refuxe to feed their kids </h1> #}
            <time class="">
                {% if ownTags.length %}
                {{ page.date | formatDate }}
                {% endif %}
            </time>
        </div>
        {{ content | safe }}
    </article>
</div>
